def countCharacters():
    uppercase_count = 0
    lowercase_count = 0
    number_count = 0
    print("Enter characters (enter '*' to stop):")
    while True:
        char = input("Enter a character: ")
        if char == '*':
            break
        if char.isupper():
            uppercase_count += 1
        elif char.islower():
            lowercase_count += 1
        elif char.isdigit():
            number_count += 1
    print(f"Uppercase letters: {uppercase_count}")
    print(f"Lowercase letters: {lowercase_count}")
    print(f"Numbers: {number_count}")
countCharacters()
